<!--index.wxml-->

<view class="container">
<view class="aside">
<scroll-view class=".scroll-hualun-style" scroll-y="true">
   <view id="{{item.tid}}" bindtap="GetTypeId" class="scroll-view-style" wx:for="{{types}}">{{item.tname}}</view>
   </scroll-view>
</view>
  
<van-toast id="van-toast" />

  <view class="item-content">
    <view class="{{orderCount.num === 0 ? 'box' : 'box active'}}">
      <view  class="item" wx:for="{{items}}" wx:key="{{item.id}}" data-id="{{item.id}}" >
        <image src="{{item.image}}"></image>
        <text class="title">{{item.title}}</text>
        <text class="price">￥ {{item.price}} 元</text>
        
        <text class="{{item.active ? 'btn active' : 'btn'}}" bindtap='addOrder' data-id="{{item.id}}" data-index="{{index}}">添加/取消</text>
        
         <text class="btn " bindtap="goto_moregoods" data-id="{{item.id}}" data-index="{{index}}">详情</text>
      </view>
    </view>
  </view>

  <view class="{{bottomFlag ? 'bottom-bar' : 'bottom-bar hidden'}}">
    <view class="count">
        共 <text class="num">{{orderCount.num}} 件</text>     
        合计 <text class="num">{{orderCount.money}} 元</text> 
    </view>

    <view class="btn">
        <text bindtap='card'>购物车</text>
    </view>
  </view>
</view>
