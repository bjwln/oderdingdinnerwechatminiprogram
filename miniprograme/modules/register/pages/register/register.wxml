<!--modules/register/pages/register/register.wxml-->
<view>
  <van-cell-group>
  <van-field value="{{ password }}"  label="名称" placeholder="请输入名称" required border="{{ false }}"  bind:change="onChangeUsername" />
    <van-field value="{{ username }}" required clearable label="账号" icon="question-o" placeholder="请输入账号" bind:click-icon="onClickIcon" bind:change="onChangeuserid"/>

    <van-field value="{{ password }}" type="password" label="密码" placeholder="请输入密码" required border="{{ false }}" bind:change="onChangePwd" />
    <button form-type='submit' bindtap="register">点击注册</button>
      <van-toast id="van-toast" />
  </van-cell-group> 

  
</view>