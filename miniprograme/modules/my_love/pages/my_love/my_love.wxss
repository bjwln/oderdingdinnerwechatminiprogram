/* pages/myFavorites/myFavorites.wxss */
.container {
  padding: 20px;
}
 
.back-button {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 20px;
}
 
.back-text {
  color: #1aad19;
  font-size: 16px;
}
 
.title {
  font-size: 24px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20px;
}
 
.scroll-view {
  height: 100%; /* 或者设置一个具体的高度 */
}
 
.favorite-item {
  padding: 10px 0;
  border-bottom: 1px solid #e5e5e5;
}
 
.item-title {
  font-size: 18px;
  margin-bottom: 5px;
}
 
.item-description {
  font-size: 14px;
  color: #888;
}
 
.item-separator {
  height: 1px;
  background-color: #e5e5e5;
  margin: 10px 0;
}
 
.no-favorites {
  text-align: center;
  font-size: 16px;
  color: #888;
  margin-top: 20px;
}