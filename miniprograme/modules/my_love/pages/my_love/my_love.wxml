
<view class="container">
  <navigator url="/pages/index/index" class="back-button">
  </navigator>
  
  <scroll-view scroll-y="true" class="scroll-view">
    <block wx:if="{{favorites.length > 0}}">
      <block wx:for="{{favorites}}" wx:key="index">
        <view class="favorite-item">
          <text class="item-title">{{item.title}}</text>
          <text class="item-description">{{item.description}}</text>
        </view>
        <view class="item-separator"></view>
      </block>
    </block>
    
    <block wx:else>
      <view class="no-favorites">暂无收藏内容</view>
    </block>
  </scroll-view>
</view>